{
  "name": "abiz-design",
  "version": "0.0.1-alpha0",
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap",
    "init": "rm -rf node_modules && npm install && npm run clean && npm run bootstrap && npm run build",
    "publish": "lerna publish",
    "publish:git": "lerna publish from-git",
    "publish:package": "lerna publish from-package",
    "start": "dumi dev",
    "docs:build": "dumi build --mode=production",
    "build": "father-build",
    "release": "npm run build && npm run publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:update": "umi-test --updateSnapshot",
    "test:coverage": "umi-test --coverage",
    "fix-memory-limit": "cross-env LIMIT=4096 increase-memory-limit"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@umijs/fabric": "^2.4.11",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@umijs/test": "^3.0.5",
    "babel-plugin-import": "^1.13.3",
    "cross-env": "^7.0.3",
    "dumi": "^1.0.13",
    "father-build": "^1.19.1",
    "gh-pages": "^3.0.0",
    "increase-memory-limit": "^1.0.7",
    "lerna": "^3.22.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0"
  }
}
