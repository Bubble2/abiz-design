{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@packages": ["packages/*"],
      "@abiz/rc-core": ["packages/abiz-rc-core/src"]
    },
    "declaration": true,
    "declarationMap": true, 
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "esnext"
  },
  "include": ["./typings.d.ts", "./packages/**/*.tsx", "./packages/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
